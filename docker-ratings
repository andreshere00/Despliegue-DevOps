FROM node:12.18.1-slim

RUN apt-get update
RUN apt-get install -y git

COPY /practica_creativa2/bookinfo/src/ratings/package.json /opt/microsrevices/
COPY /practica_creativa2/bookinfo/src/ratings/ratings.js /opt/microsrevices/

WORKDIR /opt/microsrevices/

RUN npm install

EXPOSE 9080

CMD ["node", "ratings.js", "9080"]
